<div class="container">
  <div>
    <form action="">
      <input type="text" name="search" id="search" placeholder="Search a cocktail">
      <input type="submit" value="🔍">
    </form>
  </div>

  <div class="banner">
    <div>
      <h1>cocktails fever</h1>
    </div>
    <div>
      <%= simple_form_for(@cocktail) do |f| %>
        <% if @cocktail.errors.any? %>
          <div>
            <ul>
              <% @cocktail.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% else %>
          <%= f.input :name %>
          <%= f.button :submit, "Add", class: "btn-primary" %>
        <% end %>
      <% end %>
    </div>
  </div>

  <div>
    <div>
      <h2>Last added cocktails</h2>
    </div>
    <div>
      <ul>
        <% @cocktails.reverse.each do |cocktail| %>
            <li>
              <span><%= link_to cocktail.name, cocktail_path(cocktail.id)  %></span>
              <span><%= link_to "🗑", cocktail_path(cocktail),
                    method: :delete,
                    data: { confirm: "Are you sure?" } %></span>
            </li>
        <% end %>
      </ul>
    </div>
  </div>

</div>s


